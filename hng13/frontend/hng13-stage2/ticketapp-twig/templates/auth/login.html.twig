{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex flex-col">
  <nav class="bg-white shadow-md py-4 px-6 site-container flex justify-between items-center">
    <a href="{{ path('app_home') }}" class="text-2xl font-bold text-blue-600">TicketFlow</a>
  </nav>

  <main class="flex-1 site-container px-4 py-8">
    <h2 class="text-2xl font-semibold mb-4">Login</h2>

    <form id="loginForm" class="max-w-md" novalidate>
      <label class="block mb-3">
        <span class="text-sm font-medium">Username</span>
        <input id="login_username" name="username" class="input mt-1" />
        <div class="error text-sm text-red-600 mt-1" data-for="username"></div>
      </label>

      <label class="block mb-3">
        <span class="text-sm font-medium">Password</span>
        <input id="login_password" type="password" name="password" class="input mt-1"/>
        <div class="error text-sm text-red-600 mt-1" data-for="password"></div>
      </label>

      <div class="flex gap-3 mt-4">
        <button type="submit" class="btn">Login</button>
        <a href="{{ path('app_register') }}" class="btn-outline">Create account</a>
      </div>
    </form>
  </main>

  <footer class="bg-gray-900 text-gray-300 py-6">
    <div class="site-container text-center">Â© {{ 'now'|date('Y') }} TicketFlow</div>
  </footer>
</div>
{% endblock %}
